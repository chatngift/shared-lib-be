{
  "compilerOptions": {
    "target": "ES6", // Compiles TypeScript to modern JavaScript
    "module": "CommonJS", // Use CommonJS for Node.js compatibility
    "strict": true, // Enable strict type checking
    "declaration": true, // Generates .d.ts files alongside .js
    "declarationMap": true, // Generates source maps for the .d.ts files (optional)
    "sourceMap": true, // Generates .map files for .js files (optional)
    "outDir": "./dist", // Output directory for the compiled files
    "rootDir": "./src", // Input directory for the source files
    "esModuleInterop": true // Ensures compatibility with ES module imports
  },
  "include": [
    "src/**/*.ts" // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules" // Exclude node_modules directory
  ]
}
